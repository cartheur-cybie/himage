            CP A,2
            JR Z,skip_default_mode
            CP A,7
            JR Z,skip_default_mode
 ENDIF

			LDL XIX,mpModeStand_pAction
			SLLB 2,C ; mode * 4
			LDL XIY,(XIX+C) ; ACTION INDIRECT

